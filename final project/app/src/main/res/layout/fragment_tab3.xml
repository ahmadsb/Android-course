<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmadsb.askjce.tabprofile.Tab3"
    android:id="@+id/fragmentTab3"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:background="@drawable/backgroundd"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/ic_settings_black_24dp"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColorHint="@color/white" />



                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@drawable/image_user"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"
                    app:layout_anchorGravity="center" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20sp">
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:text="@string/username"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_black_24dp"
                    android:layout_gravity="center_horizontal">

                </ImageView>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/Gray2"
                android:layout_marginTop="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >



                <TextView
                    android:id="@+id/profile_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_message_black_24dp"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:text="@string/Message"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:padding="16sp"
                    android:textColorHint="@color/white"
                    />
                <TextView
                    android:id="@+id/profile_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="4dp"
                    android:gravity="bottom"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:text="@string/call"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:padding="16sp"
                    android:textColorHint="@color/white"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/Gray2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txtBIO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center
"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:maxLines="1"
                    android:padding="16sp"
                    android:text="Me ......"
                    android:textColorHint="#fff" />
                <TextView
                    android:id="@+id/edtxtBIO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDIT BIO"
                    android:textColor="@color/com_facebook_blue"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:background="#8f8f8f">

                </View>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>
